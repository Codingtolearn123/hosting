<div class="vs-ai-widget" data-vs-ai-widget>
    <button type="button" class="vs-ai-toggle">
        <i class="vs-icon fas fa-comments"></i>
        <span>AI Assistant</span>
    </button>
    <div class="vs-ai-panel" hidden>
        <div class="vs-ai-messages" role="log"></div>
        <form class="vs-ai-form">
            <textarea name="message" rows="3" placeholder="Ask about your services..."></textarea>
            <div class="vs-ai-actions">
                <button type="submit" class="vs-button">Send</button>
                <button type="button" class="vs-button ghost" data-vs-ai-reset>Reset</button>
            </div>
        </form>
    </div>
</div>
