{
  "name": "VirtualSkyHost Marketing Automation",
  "nodes": [
    {
      "id": "cron",
      "type": "cron",
      "parameters": {
        "triggerTimes": [{"hour": 8, "minute": 0}],
        "mode": "everyDay"
      }
    },
    {
      "id": "fetchLeads",
      "type": "httpRequest",
      "parameters": {
        "url": "https://billing.virtualskyhost.com/api/leads",
        "method": "GET"
      }
    },
    {
      "id": "segment",
      "type": "function",
      "parameters": {
        "functionCode": "return items.filter(item => item.json.score > 75);"
      }
    },
    {
      "id": "facebookAds",
      "type": "httpRequest",
      "parameters": {
        "url": "https://graph.facebook.com/v18.0/adsets",
        "method": "POST",
        "body": {
          "name": "VirtualSkyHost Retargeting",
          "daily_budget": 2500
        }
      }
    }
  ],
  "connections": {
    "cron": {
      "main": [[{"node": "fetchLeads"}]]
    },
    "fetchLeads": {
      "main": [[{"node": "segment"}]]
    },
    "segment": {
      "main": [[{"node": "facebookAds"}]]
    }
  }
}
